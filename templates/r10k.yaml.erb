# Warning: This file is managed by puppet; DO NOT EDIT
# ====================================================
# In Vagrant (vrt) we use a custom postrun script for Hieradata,
# therefore the source is not required.

---
postrun: ['/etc/puppetlabs/r10k/postrun/postrun.py']
puppetfilelocation: '/etc/puppetlabs/code/environments/production/Puppetfile'
cachedir: /opt/puppetlabs/puppet/cache/r10k
sources:
  puppet:
    basedir: /etc/puppetlabs/code/environments
    prefix: false
    remote: <%= @remote_path_puppet %>
  <% if @location != "vrt" %>
  hiera:
    basedir: /etc/puppetlabs/code/hieradata
    prefix: false
    remote: <%= @remote_path_hiera %>
  <%end %>
